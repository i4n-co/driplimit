{
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "alpinejs": "^3.14.1",
    "htmx-ext-sse": "^2.2.2",
    "htmx.org": "^2.0.2",
    "prettier": "^3.3.3",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.10"
  },
  "scripts": {
    "postinstall": "cp -r ./node_modules/htmx.org ./node_modules/htmx-ext-sse ./node_modules/alpinejs ./statics/js && npx tailwindcss -i views/css/main.css -o statics/css/main.css --minify",
    "dev": "npx tailwindcss -i views/css/main.css -o statics/css/main.css --watch",
    "tailwind-rebuild": "npx tailwindcss -i views/css/main.css -o statics/css/main.css"
  }
}
